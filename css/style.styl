@import 'nib/vendor'

vendors = webkit o ms moz

@font-face 
	font-family 'icomoon'
	src:url('../fonts/icomoon.eot')
	src:url('../fonts/icomoon.eot?#iefix') format('embedded-opentype'),
		url('../fonts/icomoon.ttf') format('truetype'),
		url('../fonts/icomoon.woff') format('woff'),
		url('../fonts/icomoon.svg#icomoon') format('svg')
	font-weight: normal
	font-style: normal

html 
	position relative
	top -25px
	overflow-y: auto

body 
	background #ecf0f1
	font-family 'Helvetica', Arial, sans-serif
	color #333
	position absolute
	top 0
	left 0
	right 0

.header
	width 100%
	padding 10px 0
	background #fff
	border-bottom 1px solid rgba(0, 0, 0, .4)
	box-shadow 0 3px 3px -2px rgba(0, 0, 0, 0.2)


h1
	font-size 1.846em
	line-height 2em
	font-weight normal

h2
	font-size 1.385em
	line-height 2em

p
	font-size 1.077em
	line-height 1.4em

article
	margin 20px 0

.logo
	background url('../images/logo.png')no-repeat 0 0
	height 95px
	width 95px
	text-indent -999999px
	display inline-block
	float left

	a
		height 95px
		width 95px
		display block


// padding-top 30px y padding-bottom 56.25% nos dan la proporción de 16:9 del vídeo.
// Se establece en el padre


.video
	height 0
	// overflow hidden
	padding-bottom 56.25%
	padding-top 30px
	width 100%
	position relative
	margin-top 25px

iframe,video,embed,object
	height 100%
	left 0
	top 0
	position absolute
	width 100%

.twitter 
	font-family 'icomoon'
	float right
	font-size 2em

	a
		text-decoration none
		color #000
		transition color .6s ease-in
		height 20px
		width 32px
		display block
		margin-top 30px

		&:hover
			color #55acee

.twitter a:before 
	content "\e600"

.footer
	margin 20px 0
	min-height 100px
	
	